{% extends 'layout.html.twig' %}

{% block video %}

  <div class="container" id="video">
    <video autoplay class="responsive-video" loop>
      <source src="/assets/video/Vegas.mp4" type="video/mp4">
    </video>
    <div class="card tom-invisible" id="quickB">
      <div class="card-content">
        <span class="card-title">Réserver dès maintenant</span>
        <form action="/booking/transfert" method="POST">
          <div class="input-field col s12">
            <select name="roomId">
              <option disabled selected value="0">Choisissez votre thème de chambre</option>
              <option value="1">USA</option>
              <option value="2">Japon</option>
              <option value="3">Thailand</option>
              <option value="4">France</option>
              <option value="5">Afrique</option>
            </select>
          </div>
          <div class="row">

            <div class="col s6">

              <label for="datepicker">Date d'arrivé
              </label>
              <input class="datepicker" id="datepickerBegin" name="beginDate" type="text">
            </div>
            <div class="col s6">
              <label for="endDate">Date de départ
              </label>
              <input class="datepicker" id="datepickerEnd" name="endDate" type="text">
            </div>
          </div>
          <label for="nbPerson">Nombre de personnes</label>
          <p class="range-field">
            <input id="nombrepersonne" max="4" min="1" name="nbPerson" type="range"/>
          </p>
          <button class="btn waves-effect waves-light" name="action" type="submit">Submit
            <i class="material-icons right">send</i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>{% endblock %}{% block description %}
