{% extends "layoutAdmin.html.twig" %}

{% block stylesheet %}
    <!--Vue Js-->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <link href="/assets/lib/animate.css/animate.min.css" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for room in rooms %}
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-action">
                            <a class="btn waves-effect waves-light btn-small" href="/admin/edit/{{ room.id }}" style="margin-left:73%;">Modifier</a>
                        </div>
                        <div class="card-image ">
                            <img class="image-card" src="/assets/images/{{ room.pic_path }}">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascript %}{% endblock %}
