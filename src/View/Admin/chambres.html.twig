{% extends "layoutAdmin.html.twig" %}

{% block stylesheet %}
    <!--Vue Js-->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <link href="/assets/lib/animate.css/animate.min.css" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12 m6">
                {% for room in rooms %}
                    <div class="card">
                        <div class="card-action">
                            <a class="waves-effect grey lighten-1 btn-small" href="/admin/edit/{{ room.id }}" style="margin-left:83%;">Modifier</a>
                        </div>
                        <div class="card-image">
                            <img src="/assets/images/{{ room.pic_path }}">
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}{% endblock %}
