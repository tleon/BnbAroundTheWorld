{% extends "layoutAdmin.html.twig" %}
{% block stylesheet %}
{% endblock %}
{% block content %}
<div class="cards">
  <div class="row">
    <div class="col s12">
      <div class="card white w-full">
        <div class="card-content">
          <div class="showBooking">
            <div class="showBooking_icon">
                <a href="/admin/planning"><svg role="img" xmlns="http://www.w3.org/2000/svg" width="32px" height="32px" viewBox="0 0 24 24" aria-labelledby="exitIconTitle exitIconDesc" stroke="#00d1b2" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="miter" fill="none" color="#00d1b2"> <title id="exitIconTitle">Exit</title> <desc id="exitIconDesc">Icon of doors with an arrow pointing outside of them</desc> <path d="M18 15l3-3-3-3"/> <path d="M11.5 12H20"/> <path stroke-linecap="round" d="M21 12h-1"/> <path d="M15 4v16H4V4z"/> </svg></a>
            </div>
            <div class="showBooking_titre">
              <h1>{{ bookings[0].name }}</h1>
            </div>
            <div class="showBooking_left">
              <div class="showBooking_entete">Informations Réservation</div>
              <p>Date d'arrivée : {{ bookings[0].begin_date|date('d-m-Y') }}</p>
              <p>Date de départ : {{ bookings[0].end_date|date('d-m-Y') }}</p>
              <p>Nombre de personnes : {{ bookings[0].nb_person }}</p>
              <p>Options : {{ bookings[0].options }}</p>
              <p>Facturation : {{ bookings[0].total_price }} €</p>
            </div>
            <div class="showBooking_right">
              <div class="showBooking_entete">Info Client</div>
              <p>Client : {{ bookings[0].username }}</p>
              <p>Contact : {{ bookings[0].mail }}</p>
              <p>Dernier avis :</p>
              <ul>
                <li>"{{ bookings[0].comment }}"</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {% endblock %}
  {% block javascript %}
  {% endblock %}