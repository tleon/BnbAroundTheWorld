    <script>
        function scrollFunction() {
            (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) ? $("#modalBtn").css('display', 'block') : $("#modalBtn").css('display', 'none');
        }
        $(document).ready(function () {
            $('.sidenav').sidenav();
            $('.modal').modal({opacity: 0});
            $('.parallax').parallax();
            $('select').formSelect();
            $('.datepicker').datepicker();
            $('#fixed-action-btn').floatingActionButton();
            window.onscroll = function () {
                scrollFunction()
            };
        });
