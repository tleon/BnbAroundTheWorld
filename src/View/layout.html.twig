<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>
        {% block title %}{% endblock %}
    </title>
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" rel="stylesheet">
    <link crossorigin="anonymous" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
    {% block stylesheet %}{% endblock %}
    <link href="/assets/images/favicon.png" rel="icon">
</head>

<body>
    <header>
        <a href="/Home/index">
            <img alt="" class="img-logo" id="logo" src="https://files.slack.com/files-pri/T6SG2QGG2-FJ1HDMUBY/favicon.png">
        </a>
        <a href="/AboutUs/show" id="aboutus" class="waves-effect waves-light btn modal-trigger bg-lg-white color-dark-blue link-nav">A propos du gîte</a>
        {% if connected %}
        <a id="connect" class="waves-effect waves-light btn modal-trigger bg-lg-white color-dark-blue"
        href="/Home/logout">Déconnexion</a>        
        {% else %}
        
        <a id="connect" class="waves-effect waves-light btn modal-trigger bg-lg-white color-dark-blue"
            href="#modal1">Connexion</a>
        {% endif %}
            
    </header>
    {% block video %}{% endblock %}

    
    {% block description %}
    {% endblock %}

    {% block parallax %}{% endblock %}

    <div class="container" id="main-body">
        {% block content %}{% endblock %}

        <div id="divBtn">


            <div class="fixed-action-btn">

                <a class="waves-effect waves-light btn-foating btn  bg-dark-blue" id="modalBtn">

                    <i class="fas fa-arrow-alt-circle-up"></i>
                </a>
            </div>
        </div>

        <footer class="page-footer " id="footer">

            <div class="row">
                <div class="col s6">
                    <ul class="color-dark-blue collection with-header">
                        <li class="collection-header">Nous contacter
                        </li>
                        <li class="collection-item">Téléphone : 0123456789</li>
                        <li class="collection-item">Mail : lesmeilleursdevPHP@gmail.com</li>
                        <li class="collection-item">Adresse : 18 rue Quelque part 01234, France</li>
                    </ul>
                </div>
                <div class="col s6">
                    <ul class="color-dark-blue collection with-header">
                        <li class="collection-header">Retrouvez nous aussi sur les réseaux sociaux</li>
                        <li class="collection-item">
                            <i class="color-dark-blue fab fa-facebook">
                                Facebook</i>
                        </li>
                        <li class="collection-item">
                            <i class="color-dark-blue fab fa-twitter">
                                Twitter</i>
                        </li>
                        <li class="collection-item">
                            <i class="color-dark-blue fab fa-google-plus">
                                Google +</i>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container color-dark-blue">
                    © 2019 Bnb Around The World, Inc, All right reserved.
                </div>
            </div>


        </footer>
        <div class="modal bg-lg-white" id="modal1">
            <div class="modal-content">
                <h4 class="color-dark-blue">Connexion</h4>
                <div class="row">
                    <form class="col s12" method="POST" action="/Home/index">
                        <div class="row">
                            <div class="input-field col s12">

                                <input class="validate" id="username" type="text" name="username">
                                <label for="username">Nom d'utilisateur</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">

                                <input class="validate" id="password" type="password" name="password">
                                <label for="password">Mot de passe</label>
                            </div>
                        </div>
                   
                        <div class="right-align">

                                <a href="/Home/SignIn" class="color-dark-blue">Inscrivez vous ! </a>
                                <input class="modal-close waves-effect waves-green btn-flat" type="submit" value="Connexion">
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        {% block javascript %}{% endblock %}
        <script>
            function scrollFunction() {
                (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) ? $("#modalBtn").css('display', 'block') : $("#modalBtn").css('display', 'none');
            }
            $('#modalBtn').click(function () {
                $('body,html').animate({
                    scrollTop: 0
                }, 800);
                return false;
            });
            $(document).ready(function () {
                $('.sidenav').sidenav();
                $('.modal').modal({opacity: 0});
                $('.parallax').parallax();
                $('select').formSelect();
                $('.datepicker').datepicker();
                $('#fixed-action-btn').floatingActionButton();
                window.onscroll = function () {
                    scrollFunction()
                };
            });
        </script>
    </body>

</html>
